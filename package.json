{
  "scripts": {
    "build": "npm run build:web && npm run build:node",
    "build:web": "webpack --mode production --target web",
    "build:node": "webpack --mode production --target node",
    "prettier": "prettier --list-different ./src/**/*",
    "tslint": "tslint --project .",
    "watch": "npm-run-all --parallel watch:*",
    "watch:web": "webpack --mode development --watch --target web",
    "watch:node": "webpack --mode development --watch --target node"
  },
  "dependencies": {
    "@types/node": "^10.11.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.1.3",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.2"
  },
  "engines": {
    "node": ">=8.11.3",
    "npm": ">=5.6.0"
  },
  "private": true
}
